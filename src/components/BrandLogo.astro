---
export interface Props {
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  priority?: boolean;
  alt?: string;
  itemprop?: string;
  ariaHidden?: boolean;
}

const {
  size = 'md',
  class: className = '',
  priority = false,
  alt = 'Buck Strong Garage Doors logo',
  itemprop,
  ariaHidden = false
} = Astro.props;

const widthMap = {
  sm: 216,
  md: 360,
  lg: 480
} as const;

const baseWidth = widthMap[size];
const aspectRatio = 1;
const baseHeight = Math.round(baseWidth * aspectRatio);

const decoding = priority ? 'sync' : 'async';
const fetchPriority = priority ? 'high' : 'auto';

const sizes =
  size === 'sm'
    ? '(max-width: 640px) 120px, 144px'
    : size === 'lg'
      ? '(max-width: 768px) 216px, (max-width: 1280px) 288px, 336px'
      : '(max-width: 640px) 168px, (max-width: 1024px) 216px, 288px';
---
<img
  src="/images/ohio%20logo.png"
  alt={alt}
  width={baseWidth}
  height={baseHeight}
  class={`w-auto ${className}`.trim()}
  loading="eager"
  decoding={decoding}
  fetchpriority={fetchPriority}
  sizes={sizes}
  itemprop={itemprop}
  aria-hidden={ariaHidden ? 'true' : undefined}
/>
